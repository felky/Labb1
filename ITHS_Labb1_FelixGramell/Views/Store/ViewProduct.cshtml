@model ITHS_Labb1_FelixGramell.ViewModels.ProductVM

@{
    ViewData["Title"] = "ViewProduct";
}

    <div class="jumbotron">
        <h1 class="display-4">@Model.product.Name</h1>
        <p class="lead">@Model.product.Price</p>
        <hr class="my-4">
        <img src="@Model.product.Img_Url" />
        <ul>
            <li><p><b>Switches: </b> @Model.productInformation.Switches</p></li>
            <li><p><b>Layout: </b>@Model.productInformation.Layout</p></li>
            <li><p><b>Language: </b>@Model.productInformation.Language</p></li>
            <li><p><b>Size: </b> @Model.productInformation.Size %</p></li>
        </ul>
    </div>